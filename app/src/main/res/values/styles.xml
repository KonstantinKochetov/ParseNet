<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="Theme.NetworkWithParseApp" parent="@style/Theme.AppCompat.Light">
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="actionBarItemBackground">@drawable/selectable_background_net_with_parse</item>
        <item name="popupMenuStyle">@style/PopupMenu.NetworkWithParseApp</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.NetworkWithParseApp</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.NetworkWithParseApp</item>
        <item name="actionDropDownStyle">@style/DropDownNav.NetworkWithParseApp</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.NetworkWithParseApp</item>
        <item name="actionModeBackground">@drawable/cab_background_top_net_with_parse</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_net_with_parse</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.NetworkWithParseApp</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.NetworkWithParseApp.Overflow</item>
        <item name="android:listViewStyle">@style/Theme.NetworkWithParseApp.LightBlueBackground</item>
        <item name="android:gridViewStyle">@style/Theme.NetworkWithParseApp.LightBlueBackground.GridView</item>
    </style>
    <style name="Theme.NetworkWithParseApp.LightBlueBackground">
        <item name="android:background">@color/light_background</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Theme.NetworkWithParseApp.LightBlueBackground.GridView">
        <item name="android:padding">@dimen/user_grid_spacing</item>
    </style>

    <style name="Theme.NetworkWithParseApp.Overflow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_menu_overflow</item>
    </style>

<!--Theme for actionBar-->
    <style name="ActionBar.Solid.NetworkWithParseApp" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_net_with_parse</item>
        <item name="backgroundStacked">@color/view_pager</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_net_with_parse</item>
        <item name="progressBarStyle">@style/ProgressBar.NetworkWithParseApp</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.NetworkWithParseApp.TitleTextStyle</item>
    </style>

    <style name="ActionBar.Solid.NetworkWithParseApp.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ActionBar.Transparent.NetworkWithParseApp" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_net_with_parse</item>
        <item name="progressBarStyle">@style/ProgressBar.NetworkWithParseApp</item>
    </style>

    <style name="PopupMenu.NetworkWithParseApp" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_net_with_parse</item>
    </style>

    <style name="DropDownListView.NetworkWithParseApp" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_net_with_parse</item>
    </style>

    <style name="ActionBarTabStyle.NetworkWithParseApp" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_net_with_parse</item>
    </style>

    <style name="DropDownNav.NetworkWithParseApp" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_net_with_parse</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_net_with_parse</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_net_with_parse</item>
    </style>

    <style name="ProgressBar.NetworkWithParseApp" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_net_with_parse</item>
    </style>

    <style name="ActionButton.CloseMode.NetworkWithParseApp" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_net_with_parse</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.NetworkWithParseApp.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.NetworkWithParseApp</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.NetworkWithParseApp</item>
    </style>

    <style name="AuthBackground">
        <item name ="android:background">#03A9F4</item>item>
    </style>

    <style name="AuthBackgroundFill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="AuthTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">60sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/app_name</item>
    </style>

<!--parent of this style is AuthTitle (child inherits everything except ones that was changed in the child itself)-->
    <style name="AuthSubTitle" parent="AuthTitle">
        <item name="android:layout_below">@+id/title</item>
        <item name="android:textSize">13sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:text">@string/subtitle</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="AuthFieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/subtitle</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/message_list_item_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/login_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/login_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/login_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/login_vertical_padding</item>
    </style>

    <style name="AuthEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">serif</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="GridImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="AuthBackgroundImage" parent="AuthBackgroundFill">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
